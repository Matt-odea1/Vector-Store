# .env.example - Template for environment variables (no secrets)

# ================================
# AWS Credentials
# ================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1
AWS_REGION=us-east-1

# ================================
# AWS Bedrock - AI Models
# ================================
# OpenAI GPT OSS 120B - Only available in us-east-1
BEDROCK_MODEL_CHAT=openai.gpt-oss-120b-1:0
BEDROCK_MODEL_EMBED=cohere.embed-english-v3
BEDROCK_EMBED_DIM=1024

# Bedrock Settings
ENABLE_STREAMING=false
ENABLE_TOOLS=false
LOG_LEVEL=INFO
AGENTCORE_MAX_ATTEMPTS=3
AGENTCORE_BACKOFF=1.5
AGENTCORE_TIMEOUT=30

# ================================
# DynamoDB - Session Persistence
# ================================
DYNAMODB_TABLE_NAME=chat_sessions
DYNAMODB_REGION=us-east-1
USE_DYNAMODB=false  # Set to 'true' after implementing DynamoDBConversationMemory

# ================================
# Deepgram - Speech-to-Text (Optional)
# ================================
DEEPGRAM_SECRET_KEY=your_deepgram_api_key

# ================================
# CORS - Frontend Configuration
# ================================
ALLOW_ORIGINS=http://localhost:5173

# ================================
# Neo4j - Vector Store for Context
# ================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_DATABASE=your_database_id
AURA_INSTANCEID=your_instance_id
AURA_INSTANCENAME=Instance name

# ================================
# Ed Platform (UNSW-specific, optional)
# ================================
ED_BEARER=your_ed_bearer_token

